var n = 0;

checkif (n == 0) {
  show(n + " is even");
} recheck (n < 0) {
  checkif (n % 2 == 0) {
    show(n + " is negative even");
  } otherwise {
    show(n + " is negative odd");
  }
} otherwise {
  checkif (n % 2 == 0) {
    show(n + " is positive even");
  } otherwise {
    show(n + " is positive odd");
  }
}